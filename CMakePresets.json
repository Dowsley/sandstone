{
  "version": 3,
  "configurePresets": [
    {
      "name": "vcpkg-debug",
      "displayName": "Debug (vcpkg)",
      "description": "Debug build using vcpkg for dependency management",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "arm64-osx"
      },
      "generator": "Unix Makefiles",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "vcpkg-release",
      "displayName": "Release (vcpkg)",
      "description": "Release build using vcpkg for dependency management",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "arm64-osx"
      },
      "generator": "Unix Makefiles",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-debug",
      "displayName": "Build Debug",
      "configurePreset": "vcpkg-debug"
    },
    {
      "name": "build-release",
      "displayName": "Build Release", 
      "configurePreset": "vcpkg-release"
    }
  ]
}
